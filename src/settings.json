{
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "WebSearch",
      "WebFetch",
      "Read",
      "Grep",
      "Glob",
      "Bash",
      "mcp__sequential-thinking",
      "mcp__vscode-mcp",
      "mcp__context7",
      "mcp__dbhub"
    ],
    "deny": [
      "Read(./secrets/**)",
      "Read(.env)",
      "Read(.env.*)"
    ],
    "ask": [
      "Bash(git push:*)",
      "Bash(git reset:*)",
      "Bash(git commit:*)",
      "Bash(git rebase:*)",
      "Bash(rm:*)",
      "Bash(Remove-Item:*)",
      "Bash(npm install:*)",
      "Bash(pip install:*)",
      "Bash(go get:*)",
      "Bash(docker rm:*)",
      "Bash(docker rmi:*)",
      "Bash(kubectl delete:*)"
    ]
  },
  "model": "opus",
  "statusLine": {
    "type": "command",
    "command": "pwsh -NoProfile -File \"%USERPROFILE%\\.claude\\statusline.ps1\""
  },
  "alwaysThinkingEnabled": true,
  "defaultMode": "plan",
  "disableBypassPermissionsMode": false,
  "enabledPlugins": {
    "gopls-lsp@claude-plugins-official": true
  }
}