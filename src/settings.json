{
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "WebSearch",
      "WebFetch",
      "Read",
      "Grep",
      "Glob",
      "Bash",
      "Skill",
      "mcp__sequential-thinking",
      "mcp__context7"
    ],
    "deny": [],
    "ask": [
      "Bash(git push:*)",
      "Bash(git reset:*)",
      "Bash(git commit:*)",
      "Bash(git rebase:*)",
      "Bash(rm:*)",
      "Bash(Remove-Item:*)",
      "Bash(npm install:*)",
      "Bash(pip install:*)",
      "Bash(go get:*)",
      "Bash(docker rm:*)",
      "Bash(docker rmi:*)",
      "Bash(kubectl delete:*)"
    ],
    "defaultMode": "plan"
  },
  "model": "opus",
  "statusLine": {
    "type": "command",
    "command": "pwsh -NoProfile -File \"%USERPROFILE%\\.claude\\statusline.ps1\""
  },
  "enabledPlugins": {
    "code-simplifier@claude-plugins-official": true,
    "gopls-lsp@claude-plugins-official": true
  },
  "alwaysThinkingEnabled": true,
  "autoUpdatesChannel": "latest",
  "defaultMode": "plan",
  "disableBypassPermissionsMode": false,
  "language": "Russian",
  "autoUpdatesChannel": "latest",
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "pwsh -NoProfile -File \"%USERPROFILE%\\.claude\\hooks\\cleanup-nul.ps1\"",
            "timeout": 5
          }
        ]
      }
    ]
  }
}