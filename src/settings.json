{
  "permissions": {
    "allow": [
      "WebSearch",
      "WebFetch",
      "Read",
      "Grep",
      "Glob",
      "Bash",
      "mcp__sequential-thinking",
      "mcp__vscode-mcp",
      "mcp__context7"
    ],
    "ask": [
      "Bash(git push:*)",
      "Bash(git reset:*)",
      "Bash(git commit:*)",
      "Bash(git rebase:*)",
      "Bash(rm:*)",
      "Bash(Remove-Item:*)",
      "Bash(npm install:*)",
      "Bash(pip install:*)",
      "Bash(go get:*)",
      "Bash(docker rm:*)",
      "Bash(docker rmi:*)",
      "Bash(kubectl delete:*)"
    ],
    "deny": [
      "Read(./secrets/**)",
      "Read(.env)",
      "Read(.env.*)"
    ]
  },
  "model": "haiku",
  "statusLine": {
    "type": "command",
    "command": "pwsh -NoProfile -File \"%USERPROFILE%\\.claude\\statusline.ps1\""
  },
  "alwaysThinkingEnabled": true,
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "TodoWrite",
        "hooks": [
          {
            "type": "command",
            "command": "pwsh -NoProfile -File \"%USERPROFILE%\\.claude\\hooks\\post_todowrite.ps1\""
          }
        ]
      },
      {
        "matcher": "Task",
        "hooks": [
          {
            "type": "command",
            "command": "pwsh -NoProfile -File \"%USERPROFILE%\\.claude\\hooks\\post_code_review.ps1\""
          }
        ]
      }
    ]
  },
  "includeCoAuthoredBy": false,
  "defaultMode": "plan",
  "disableBypassPermissionsMode": false
}