{
  "permissions": {
    "allow": [
      "WebSearch",
      "WebFetch",
      "Read",
      "Grep",
      "Glob",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(ls:*)",
      "Bash(pwd:*)",
      "Bash(cat:*)",
      "Bash(echo:*)",
      "Bash(whoami:*)",
      "Bash(node --version:*)",
      "Bash(npm --version:*)",
      "Bash(npm run lint:*)",
      "Bash(npm run test:*)",
      "mcp__sequential-thinking__sequentialthinking",
      "mcp__context7__resolve-library-id",
      "mcp__context7__get-library-docs"
    ],
    "deny": [
      "Read(./secrets/**)",
      "Read(.env)",
      "Read(.env.*)"
    ]
  },
  "alwaysThinkingEnabled": true
}