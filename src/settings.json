{
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "WebSearch",
      "WebFetch",
      "Read",
      "Grep",
      "Glob",
      "Bash",
      "Skill",
      "mcp__sequential-thinking",
      "mcp__context7",
      "mcp__db-mcp-server__list_databases",
      "mcp__db-mcp-server__query_*",
      "mcp__db-mcp-server__schema_*",
      "mcp__db-mcp-server__performance_*"
    ],
    "deny": [],
    "ask": [
      "Bash(git push:*)",
      "Bash(git reset:*)",
      "Bash(git commit:*)",
      "Bash(git rebase:*)",
      "Bash(rm:*)",
      "Bash(Remove-Item:*)",
      "Bash(npm install:*)",
      "Bash(pip install:*)",
      "Bash(go get:*)",
      "Bash(docker rm:*)",
      "Bash(docker rmi:*)",
      "Bash(kubectl delete:*)"
    ],
    "defaultMode": "plan"
  },
  "model": "opus",
  "statusLine": {
    "type": "command",
    "command": "bash \"$HOME/.claude/statusline.sh\""
  },
  "enabledPlugins": {
    "code-simplifier@claude-plugins-official": true,
    "gopls-lsp@claude-plugins-official": true
  },
  "alwaysThinkingEnabled": true,
  "autoUpdatesChannel": "latest",
  "defaultMode": "plan",
  "language": "Russian",
  "sandbox": {
    "enabled": true,
    "autoAllowBashIfSandboxed": true
  }
}