{
  "permissions": {
    "allow": [
      "WebSearch",
      "WebFetch",
      "Read",
      "Grep",
      "Glob",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(ls:*)",
      "Bash(pwd:*)",
      "Bash(cat:*)",
      "Bash(dir:*)",
      "Bash(echo:*)",
      "Bash(find:*)",
      "Bash(whoami:*)",
      "Bash(node --version:*)",
      "Bash(npm --version:*)",
      "Bash(npm run lint:*)",
      "Bash(npm run test:*)",
      "Bash(go doc:*)",
      "Bash(go build:*)",
      "Bash(go test:*)",
      "Bash(go list:*)",
      "Bash(go clean:*)",
      "Bash(go mod:*)",
      "Bash(go run:*)",
      "Bash(go fmt:*)",
      "Bash(go vet:*)",
      "Bash(docker build:*)",
      "Bash(docker-compose:*)",
      "Bash(docker images:*)",
      "Bash(docker ps:*)",
      "Bash(kubectl:*)",
      "Bash(helm:*)",
      "mcp__context7__resolve-library-id",
      "mcp__context7__get-library-docs",
      "mcp__vscode-mcp__health_check",
      "mcp__vscode-mcp__get_diagnostics",
      "mcp__vscode-mcp__get_symbol_lsp_info",
      "mcp__vscode-mcp__get_references"
    ],
    "deny": [
      "Read(./secrets/**)",
      "Read(.env)",
      "Read(.env.*)"
    ]
  },
  "model": "haiku",
  "statusLine": {
    "type": "command",
    "command": "pwsh -NoProfile -File \"%USERPROFILE%\\.claude\\statusline.ps1\""
  },
  "alwaysThinkingEnabled": true,
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "TodoWrite",
        "hooks": [
          {
            "type": "command",
            "command": "python \"%USERPROFILE%\\.claude\\hooks\\post_todowrite.py\""
          }
        ]
      },
      {
        "matcher": "mcp__vscode-mcp__get_diagnostics",
        "hooks": [
          {
            "type": "command",
            "command": "python \"%USERPROFILE%\\.claude\\hooks\\post_diagnostics.py\""
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "python \"%USERPROFILE%\\.claude\\hooks\\post_diagnostics.py\""
          }
        ]
      },
      {
        "matcher": "Task",
        "hooks": [
          {
            "type": "command",
            "command": "python \"%USERPROFILE%\\.claude\\hooks\\post_code_review.py\""
          }
        ]
      }
    ]
  }
}